<div class="fielder-logo">
  <img src="/img/final-kickstatterlogo.png" alt="Kick Statter Logo">
</div>

<div class="team-record">
  <h1><%= @team.name() %> Record</h1>
</div>

  <form action="/team/<%= @team.id() %>/record" method="post">
    <input type="hidden" value="<%= @team.id() %>">
    <input type="hidden" name="_method" value="patch">
    <input type="text" name="win" placeholder="Wins">
    <input type="text" name="loss" placeholder="Losses">
    <input type="text" name="draw" placeholder="Draws">

    <button type="submit" class="btn btn-danger">Add</button>
  </form>

  <table class="table table-striped">

  <thead>
    <tr>
      <th>Wins</th>
      <th>Loss</th>
      <th>Draw</th>
    </tr>
  </thead>
      <tr>
        <td><%= @team.win() %></td>
        <td><%= @team.loss() %></td>
        <td><%= @team.draw() %></td>
      </tr>

  </table>

  <h1>Here is the team's roster</h1>
  <form class="form-inline" action="/team/<%= @team.id() %>/player" method="post">
      <label for="name"></label>
      <input type="text" name="name" placeholder="Name" required>
      <input type="hidden" name="team_id" value="<%= @team.id() %>">

      <label for="position"></label>
      <input type="text" name="position" placeholder="Position" required>

      <label for="jersey_number"></label>
      <input type="text" name="jersey_number" placeholder="Jersey Number" required>

      <button type="submit" class="btn btn-primary">Add Player</button>
  </form>
<% if @team.players.any?() %>
  <h3>Roster:</h3>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Position</th>
        <th>Jersey Number</th>
        <th></th>
      </tr>
    </thead>
    <% @team.players.each() do |player| %>
    <tr>
      <td><div class="roster_name"><a href="/player/<%= player.id() %>"><%= player.name() %></a></div></td>
      <td><%= player.position() %></td>
      <td><%= player.jersey_number() %></td>
      <td>
        <form id="form_id" class="form-inline" action="/team/:id" method="post">
      <input type="hidden" name="player_id" value="<%= player.id() %>">
      <input type="hidden" name="_method" value="delete">
      <button type="submit" class="btn btn-danger btn-xs">x</button>
    </form>
      </td>
    </tr>
    <% end %>
  </table>
<% else %>
  <h4>There are no players on the roster yet.</h4>
<% end %>

  <br></br>


<br>
<h5><a href="/">Home</a></h5>
